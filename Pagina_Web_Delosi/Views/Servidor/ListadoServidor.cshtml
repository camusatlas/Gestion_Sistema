          crossorigin="anonymous"
          referrerpolicy="no-referrer" />
    <!-- Custom CSS -->
    <!--  -->

    <title>Servidores</title>

</head>
<body>
    <main>
        <h2 class="text-center">Registro de Servidores</h2>
        <hr />
        <div>
            <p>
                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#modalIngresar">Ingresar</button>
            </p>
        </div>
        @*Html.ActionLink("Ingresar", "CrearServidor")*@
        <table id="tablax" class="table table-bordered table-hover table-condensed mx-auto">
            <thead class="text-center">
                <tr style="font-size:12px">
                    <th class="text-center" style='background-color: #337ab7; color:white'>
                        @Html.DisplayNameFor(model => model.cod_marca)
                    </th>
                    <th class="text-center" style='background-color: #337ab7; color:white'>
                        @Html.DisplayNameFor(model => model.cod_tienda)
                    </th>
                    <th class="text-center" style='background-color: #337ab7; color:white'>
                        @Html.DisplayNameFor(model => model.tienda)
                    </th>
                    <th class="text-center" style='background-color: #337ab7; color:white'>
                        @Html.DisplayNameFor(model => model.ip_servidor)
                    </th>
                    <th class="text-center" style='background-color: #337ab7; color:white'>
                        @Html.DisplayNameFor(model => model.nom_servidor)
                    </th>
                    <th class="text-center" style='background-color: #337ab7; color:white'>
                        @Html.DisplayNameFor(model => model.modelo)
                    </th>
                    <th class="text-center" style='background-color: #337ab7; color:white'>
                        @Html.DisplayNameFor(model => model.serie)
                    </th>
                    <th class="text-center" style='background-color: #337ab7; color:white'>
                        @Html.DisplayNameFor(model => model.sistema_operativo)
                    </th>
                    <th class="text-center" style='background-color: #337ab7; color:white'>
                        @Html.DisplayNameFor(model => model.version_micros)
                    </th>
                    <th class="text-center" style='background-color: #337ab7; color:white'>
                        @Html.DisplayNameFor(model => model.memoria_ram)
                    </th>
                    <th class="text-center" style='background-color: #337ab7; color:white'>
                        @Html.DisplayNameFor(model => model.tamano_bd)
                    </th>
                    <th class="text-center" style='background-color: #337ab7; color:white'>
                        @Html.DisplayNameFor(model => model.status)
                    </th>
                    <th class="text-center" style='background-color: #337ab7; color:white'>
                        @Html.DisplayNameFor(model => model.ultimo_reinicio)
                    </th>
                    <th class="text-center" style='background-color: #337ab7; color:white'>
                        @Html.DisplayNameFor(model => model.version_facturador)
                    </th>
                    <th class="text-center" style='background-color: #337ab7; color:white'>
                        @Html.DisplayNameFor(model => model.ultima_venta)
                    </th>
                    <th class="text-center" style='background-color: #337ab7; color:white'>
                        @Html.DisplayNameFor(model => model.flg_estado)
                    </th>
                    <th class="text-center" style='background-color: #337ab7; color:white'>
                        @Html.DisplayNameFor(model => model.usuario_crea)
                    </th>
                    <th class="text-center" style='background-color: #337ab7; color:white'>
                        @Html.DisplayNameFor(model => model.fecha_crea)
                    </th>
                    <th class="text-center" style='background-color: #337ab7; color:white'>
                        @Html.DisplayNameFor(model => model.usuario_mod)
                    </th>
                    <th class="text-center" style='background-color: #337ab7; color:white'>
                        @Html.DisplayNameFor(model => model.fecha_mod)
                    </th>
                    <th class="text-center" style='background-color: #337ab7; color:white'>
                        @Html.DisplayNameFor(model => model.idtecnico)
                    </th>
                    <th class="text-center" style='background-color: #337ab7; color:white'>
                        @Html.DisplayNameFor(model => model.fecha_asignado)
                    </th>
                    <th class="text-center" style='background-color: #337ab7; color:white'>Status</th>
                    <th class="text-center" style='background-color: #337ab7; color:white'>Opciones</th>
                </tr>
            </thead>

            @foreach (var item in Model)
            {
                <tr class="text-center" style="font-size:12px;">
                    <td style="background-color: #dbd1d0; ">
                        @Html.DisplayFor(modelItem => item.cod_marca)
                    </td>
                    <td style="background-color: #dbd1d0; ">
                        @Html.DisplayFor(modelItem => item.cod_tienda)
                    </td>
                    <td style="background-color: #dbd1d0; ">
                        @Html.DisplayFor(modelItem => item.tienda)
                    </td>
                    <td style="background-color: #dbd1d0; ">
                        @Html.DisplayFor(modelItem => item.ip_servidor)
                    </td>
                    <td style="background-color: #dbd1d0; ">
                        @Html.DisplayFor(modelItem => item.nom_servidor)
                    </td>
                    <td style="background-color: #dbd1d0; ">
                        @Html.DisplayFor(modelItem => item.modelo)
                    </td>
                    <td style="background-color: #dbd1d0; ">
                        @Html.DisplayFor(modelItem => item.serie)
                    </td>
                    <td style="background-color: #dbd1d0; ">
                        @Html.DisplayFor(modelItem => item.sistema_operativo)
                    </td>
                    <td style="background-color: #dbd1d0; ">
                        @Html.DisplayFor(modelItem => item.version_micros)
                    </td>
                    <td style="background-color: #dbd1d0; ">
                        @Html.DisplayFor(modelItem => item.memoria_ram)
                    </td>
                    <td style="background-color: #dbd1d0; ">
                        @Html.DisplayFor(modelItem => item.tamano_bd)
                    </td>
                    <td style="background-color: #dbd1d0; ">
                        @Html.DisplayFor(modelItem => item.status)
                    </td>
                    <td style="background-color: #dbd1d0; ">
                        @Html.DisplayFor(modelItem => item.ultimo_reinicio)
                    </td>
                    <td style="background-color: #dbd1d0; ">
                        @Html.DisplayFor(modelItem => item.version_facturador)
                    </td>
                    <td style="background-color: #dbd1d0; ">
                        @Html.DisplayFor(modelItem => item.ultima_venta)
                    </td>
                    <td style="background-color: #dbd1d0; ">
                        @Html.DisplayFor(modelItem => item.flg_estado)
                    </td>
                    <td style="background-color: #dbd1d0; ">
                        @Html.DisplayFor(modelItem => item.usuario_crea)
                    </td>
                    <td style="background-color: #dbd1d0; ">
                        @Html.DisplayFor(modelItem => item.fecha_crea)
                    </td>
                    <td style="background-color: #dbd1d0; ">
                        @Html.DisplayFor(modelItem => item.usuario_mod)
                    </td>
                    <td style="background-color: #dbd1d0; ">
                        @Html.DisplayFor(modelItem => item.fecha_mod)
                    </td>
                    <td style="background-color: #dbd1d0; ">
                        @Html.DisplayFor(modelItem => item.idtecnico)
                    </td>
                    <td style="background-color: #dbd1d0; ">
                        @Html.DisplayFor(modelItem => item.fecha_asignado)
                    </td>
                    <td style="background-color: #dbd1d0; "><i class="fa-solid fa-square-check" style="color: green;"></i></td>
                    <td style="background-color: #dbd1d0; font-size:12px;">
                        @Html.ActionLink("Actualizar", "Editar", new { id = item.tienda }, new { @class = "btn btn-success" })
                        @Html.ActionLink("Eliminar", "Elimina", new { id = item.tienda }, new { @class = "btn btn-danger" })
                    </td>
                </tr>
            }

        </table>
        <hr style="height:5px;" />

    </main>

    <div class="modal fade" id="modalIngresar" tabindex="-1" role="dialog" aria-labelledby="modalIngresarLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title text-center" id="modalIngresarLabel">Ingresar Servidor</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <!-- Aquí puedes agregar los campos o contenido del formulario para ingresar el servidor -->
                    <!-- Ejemplo: -->
                    <form>
                        <!-- Campos del formulario -->
                        <div class="mb-3">
                            <label for="nombreServidor" class="form-label">Código de Marca</label>
                            <input type="text" class="form-control" id="cod_marca" placeholder="Ingrese el código de tienda" maxlength="3">
                        </div>

                        <div class="mb-3">
                            <label for="nombreServidor" class="form-label">Código Tienda</label>
                            <input type="text" class="form-control" id="cod_tienda" placeholder="Ingrese el código de la tienda" maxlength="3">
                        </div>

                        <div class="mb-3">
                            <label for="nombreServidor" class="form-label">Tienda</label>
                            <input type="text" class="form-control" id="tienda" placeholder="Ingrese el nombre de la Tienda" maxlength="250">
                        </div>

                        <div class="mb-3">
                            <label for="nombreServidor" class="form-label">IP Servidor</label>
                            <input type="text" class="form-control" id="ip_servidor" placeholder="Ingrese la IP del Servisor" maxlength="20">
                        </div>

                        <div class="mb-3">
                            <label for="nombreServidor" class="form-label">Nombre del Servidor</label>
                            <input type="text" class="form-control" id="nom_servidor" placeholder="Ingrese el nombre del servidor" maxlength="50">
                        </div>

                        <div class="mb-3">
                            <label for="nombreServidor" class="form-label">Modelo de Equipo</label>
                            <input type="text" class="form-control" id="modelo" placeholder="Ingrese el Modelo de Equipo" maxlength="90">
                        </div>

                        <div class="mb-3">
                            <label for="nombreServidor" class="form-label">Serie</label>
                            <input type="text" class="form-control" id="serie" placeholder="Ingrese la serie del Equipo" maxlength="90">
                        </div>

                        <div class="mb-3">
                            <label for="nombreServidor" class="form-label">Version Micros</label>
                            <input type="text" class="form-control" id="version_micros" placeholder="Ingrese la vercion del Micros" maxlength="90">
                        </div>

                        <div class="mb-3">
                            <label for="nombreServidor" class="form-label">Memoria Ram</label>
                            <input type="text" class="form-control" id="memoria_ram" placeholder="Ingrese la memoria ram" maxlength="30">
                        </div>

                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                    <button type="button" class="btn btn-primary">Guardar</button>
                </div>
            </div>
        </div>
    </div>

